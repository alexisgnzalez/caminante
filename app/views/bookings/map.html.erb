<div id="tour"
  data-name="<%= @tour.name %>"
  data-description="<%= @tour.description %>"
  data-long="<%= @tour.long %>"
  data-lat="<%= @tour.lat %>"
  data-counter="<%= @booking.counter %>"
  data-count-loc="<%= @tour.locations.size %>">
</div>


<% @tour.locations.each do |location| %>
  <div class='locations'
    data-name="<%= location.name %>"
    data-description="<%= location.description %>"
    data-long=<%= location.long %>
    data-lat=<%= location.lat %>>
  </div>
<% end %>


<div id="map"
     style="width: 100%; height: 720px; margin: 0px"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="container">
	<div class="row">
		<div class="col-lg-12 col-sm-4 col-sm-offset-4">
			<div id="carouselExampleControls" class="carousel slide mt-2" data-ride="carousel">
				<div class="carousel-inner">
					<% if @tour.photos.empty? %>
						<div class="carousel-item active">
							<%= image_tag "PlazaBolivar.jpg", class: "d-block w-100", alt: "photo" %>
						</div>
						<div class="carousel-item">
							<%= image_tag "PlazaBolivar.jpg", class: "d-block w-100", alt: "photo" %>
						</div>
						<div class="carousel-item">
							<%= image_tag "PlazaBolivar.jpg", class: "d-block w-100", alt: "photo" %>
						</div>
					<% else %>
						<% @tour.photos.each_with_index do |photo, index| %>
							<% if index == 0 %>
								<div class="carousel-item active">
									<%= cl_image_tag photo.key, class: "d-block w-100" %>
								</div>
							<% else %>
								<div class="carousel-item">
									<%= cl_image_tag photo.key, class: "d-block w-100" %>
								</div>
							<% end %>
						<% end %>
					<% end %>
				</div>
				<button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</button>
			</div> <!-- carrusel -->
			
			<div class="d-flex">
    		<div class="col-4 p-0">
      		<div class="mt-3 p-3 mb-5 rounded" style="max-width: 18rem;">
						<div class="card-header text-uppercase font-weight-bold">name</div>
						<div class="card-body">
          		<p class="card-text"><%= @tour.name %></p>
        		</div>
      		</div>
				</div>
			</div>

		</div>
	</div> <!-- row -->
</div> <!-- container -->
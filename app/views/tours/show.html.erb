<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-6 col-sm-4 col-sm-offset-4 justify-content-center d-flex flex-column align-items-center">
			<div id="carouselExampleControls" class="carousel slide mt-2 boton d-flex flex-column justify-content-center align-items-center" data-ride="carousel">
				<div class="carousel-inner">
					<% if @tour.photos.empty? %>
						<div class="carousel-item active">
							<%= cl_image_tag @tour.photos.key, class: "d-block w-100" %>
						</div>
						<div class="carousel-item">
							<%= cl_image_tag @tour.photos.key, class: "d-block w-100" %>
						</div>
						<div class="carousel-item">
							<%= cl_image_tag @tour.photos.key, class: "d-block w-100" %>
						</div>
					<% else %>
						<% @tour.photos.each_with_index do |photo, index| %>
							<% if index == 0 %>
								<div class="carousel-item active">
									<%= cl_image_tag @tour.photos.key, class: "d-block w-100" %>
								</div>
							<% else %>
								<div class="carousel-item">
									<%= cl_image_tag @tour.photos.key, class: "d-block w-100" %>
								</div>
							<% end %>
						<% end %>
					<% end %>
				</div>
				<button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</button>
				<%= link_to "Start", new_tour_booking_path(@tour), class: "btn-start text-uppercase text-decoration-none" %>
			</div> <!-- carrusel -->

			<div class="card-body text-center bg-white tarjeta-title-rating mt-5">
				<h2><%= @tour.name %></h2>
				<div class="estrellas mb-3 mt-2">
					<button>
						<i class="bi bi-star-fill"></i>
					</button>
					<button>
						<i class="bi bi-star-fill"></i>
					</button>
					<button>
						<i class="bi bi-star-fill"></i>
					</button>
					<button>
						<i class="bi bi-star-fill"></i>
					</button>
					<button>
						<i class="bi bi-star-fill"></i>
					</button>
				</div> <!-- estrellas -->
			</div>

			<div class="card-body text-center tarjeta-description mt-3">
				<p><%= @tour.description %></p>
			</div>

			<div class="card-body text-center tarjeta-description mt-3 mb-5">
				<p><%= @tour.description %></p>
			</div>

		</div>
	</div> <!-- row -->
</div> <!-- container -->
<div>
	<div class="s-area" >
		<ul class="s-circles">
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
		</ul>
	</div>
	<div class="container">
		<div id="carouselExampleControls" class="carousel slide mt-2 boton d-flex flex-column justify-content-center align-items-center" data-ride="carousel">
			<div class="carousel-inner">
				<% if @tour.photos.empty? %>
					<div class="carousel-item active">
						<%= image_tag "https://res.cloudinary.com/alexisgonzalez/image/upload/v1636379461/tour_placeholder_pxovv7.jpg", alt: "Tour", class: "d-block lg-carrusel" %>
					</div>
					<div class="carousel-item">
						<%= image_tag "https://res.cloudinary.com/alexisgonzalez/image/upload/v1636379461/tour_placeholder_pxovv7.jpg", alt: "Tour", class: "d-block lg-carrusel" %>
					</div>
					<div class="carousel-item">
						<%= image_tag "https://res.cloudinary.com/alexisgonzalez/image/upload/v1636379461/tour_placeholder_pxovv7.jpg", alt: "Tour", class: "d-block lg-carrusel" %>
					</div>
				<% else %>
					<% @tour.photos.each_with_index do |photo, index| %>
						<% if index == 0 %>
							<div class="carousel-item active">
								<%= cl_image_tag photo.key, class: "d-block lg-carrusel" %>
							</div>
						<% else %>
							<div class="carousel-item">
								<%= cl_image_tag photo.key, class: "d-block lg-carrusel" %>
							</div>
						<% end %>
					<% end %>
				<% end %>
			</div>
			<button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</button>
			<%= link_to "Camina!", new_tour_booking_path(@tour), class: "btn-start text-uppercase text-decoration-none" %>
		</div> <!-- carrusel -->
		<div class="row justify-content-center">
			<div class="col-lg-6 col-sm-12 justify-content-center d-flex flex-column align-items-center">
				<div class="card-body tarjeta mt-5">
					<h2 class="texto"><%= @tour.name %></h2>
					<div class="estrellas mb-3 mt-2">
						<button>
							<i class="bi bi-star-fill"></i>
						</button>
						<button>
							<i class="bi bi-star-fill"></i>
						</button>
						<button>
							<i class="bi bi-star-fill"></i>
						</button>
						<button>
							<i class="bi bi-star-fill"></i>
						</button>
						<button>
							<i class="bi bi-star-fill"></i>
						</button>
					</div> <!-- estrellas -->
					<p><%= @tour.description %></p>
				</div>

				<div class="text-center linea mt-3">
					<h2 class="texto">Locations</h2>
				</div>
				<hr>

				<% @tour.locations.each_with_index do |location, index|%>
					<div class="card-body text-left tarjeta mb-3">
						<h3 class="text-center"><%= location.name %></h3><br>
						<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
							<div class="carousel-inner mb-3">
								<% if location.photos.empty? %>
									<div class="carousel-item active">
										<%= image_tag "https://res.cloudinary.com/alexisgonzalez/image/upload/v1636379461/tour_placeholder_pxovv7.jpg", alt: "Tour", class: "d-block sm-carrusel" %>
									</div>
									<div class="carousel-item">
										<%= image_tag "https://res.cloudinary.com/alexisgonzalez/image/upload/v1636379461/tour_placeholder_pxovv7.jpg", alt: "Tour", class: "d-block sm-carrusel" %>
									</div>
									<div class="carousel-item">
										<%= image_tag "https://res.cloudinary.com/alexisgonzalez/image/upload/v1636379461/tour_placeholder_pxovv7.jpg", alt: "Tour", class: "d-block sm-carrusel" %>
									</div>
								<% else %>
									<% location.photos.each_with_index do |photo, index| %>
										<% if index == 0 %>
											<div class="carousel-item active">
												<%= cl_image_tag photo.key, class: "d-block sm-carrusel" %>
											</div>
										<% else %>
											<div class="carousel-item">
												<%= cl_image_tag photo.key, class: "d-block sm-carrusel" %>
											</div>
										<% end %>
									<% end %>
								<% end %>
							</div>
							<button class="carousel-control-prev" type="button" data-target="#carouselExampleFade" data-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="sr-only">Previous</span>
							</button>
							<button class="carousel-control-next" type="button" data-target="#carouselExampleFade" data-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="sr-only">Next</span>
							</button>
						</div> <!-- carrusel -->
						<p><%= location.description %></p>
					</div>
				<% end %>
				<br>

			</div>
		</div> <!-- row -->
	</div> <!-- container -->
</div>

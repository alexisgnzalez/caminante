<div id="<%= "navbar-home" %>" class="navbar navbar-lewagon navbar-expand-sm navbar-light fixed-top navbar-color">
  <%= link_to root_path, class: "navbar-brand" do %>
     <i class="logo"> CAMINANTE! <i class="fas fa-hiking"></i></i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="bi bi-text-right"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active nav-item dropdown d-none d-md-block">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item nav-item dropdown d-none d-md-block">
          <%= link_to "Available Tours", tours_path, class: "nav-link" %>
        </li>
        <li class="nav-item d-md-none ">
          <%= link_to "Home", root_path, class: "dropdown-item" %>
          <%= link_to "Available Tours", tours_path, class: "dropdown-item" %>
          <%= link_to "Christmas (Demo)", rockefeller_tours_path, class: "dropdown-item" %>
          <%= link_to "Add New Tour", new_tour_path, class: "dropdown-item" %>
          <%= link_to "Add New Location", new_location_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </li>
        <li class="nav-item dropdown d-none d-md-block">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key,   width: 40, height: 40, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag "https://res.cloudinary.com/alexisgonzalez/image/upload/v1635537267/development/dhyi8nn9u85t7lmuzjbv8t7lsy1k.jpg", width: 40, height: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Christmas (Demo)", rockefeller_tours_path, class: "dropdown-item" %>
            <%= link_to "Add New Tour", new_tour_path, class: "dropdown-item" %>
            <%= link_to "Add New Location", new_location_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
